{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "moduleResolution": "bundler",
    "module": "esnext",
    "strict": false,  // Turn off strict mode
    "noImplicitAny": false,
    "strictNullChecks": false  // This specifically fixes the null assignment issue
  },
  "include": ["src"],
  "paths": {
    "@lit-protocol/constants": ["./node_modules/@lit-protocol/constants"]
  }
}